@page 
@using global::UserStories.Models
@model UserStories.Pages.UserStoriesModel
@{
    <h1>User Stories</h1>
    foreach (var userstory in Model.UserStories)
    {
       <div class="card mb-3" style="width: 30rem;">
            <div class="card-header p-2">
                <h5 class="card-title"><small class="text-muted">(@userstory.Id) </small>@userstory.Title</h5>
            </div>
            <div class="card-body">
                <p class="card-text">@userstory.Description</p>
            </div>
            <div class="card-footer">
                <a class="btn" type="button" asp-page="DeleteUserStory" asp-route-id="@userstory.Id"><i class="fa fa-trash"></i></a>
                <a class="btn" type="button" asp-page="UserStoryDetail" asp-route-id="@userstory.Id"><i class="fa fa-info-circle"></i></a>
            </div>
        </div>  
    }
}

